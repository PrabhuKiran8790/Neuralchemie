thead {
	@apply rounded-xl;
}

.mermaid-block {
	@apply mx-auto mt-5 flex w-fit items-center justify-center rounded-2xl border border-border p-4;
}

.katex-display {
	@apply overflow-x-auto lg:overflow-x-visible;
}
